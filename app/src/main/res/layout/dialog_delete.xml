<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

<!--   android:layout_width="492px"
        android:layout_height="324px" -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="250dp"
        android:background="#ffffff">

<!--        android:layout_width="43px"
            android:layout_height="58px"
            android:layout_marginStart="225px"
            android:layout_marginTop="40px"-->
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="25dp"
            android:layout_height="36dp"
            android:background="@drawable/photo_popup_icon_trash"
            android:layout_gravity="center|top"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_delete_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="25px"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_delete"
            android:text="@string/delete_confirm"/>


<!--
android:layout_width="144px"
            android:layout_height="42px"
android:layout_marginStart="96px"
            android:layout_marginBottom="45px"-->
        <TextView
            android:id="@+id/delete_cancel_btn"
            android:layout_width="144px"
            android:layout_height="42px"
            android:background="@drawable/navy"
            android:contentDescription="hf_no_number"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/delete_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:textSize="22px"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/delete_btn"
            android:layout_width="144px"
            android:layout_height="42px"
            android:background="@drawable/red"
            android:contentDescription="hf_no_number"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@id/delete_cancel_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:textSize="22px"
            android:textStyle="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>