<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#CC3c3c3c"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center|top">



        <ImageView
            android:id="@+id/gif_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_warning"
            android:layout_marginTop="80px"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tv_network_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24px"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="41px"
            android:text="@string/not_network_connect"/>



        <TextView
            android:id="@+id/tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_finish"
            android:contentDescription="hf_no_number"
            android:gravity="center"
            android:text="@string/finish"
            android:textColor="@color/colorWhite"
            android:textSize="22px"
            android:layout_marginTop="38px"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>