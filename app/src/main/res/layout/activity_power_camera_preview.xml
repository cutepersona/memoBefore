<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".activity.PowerCameraPreviewActivity">

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/ll_command"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28px"
                android:layout_marginTop="28px"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/fl_go_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_manual_focus"
                    android:orientation="horizontal"
                    android:padding="3px">

                    <!--뒤로-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/icon_finish"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="3px"
                            android:contentDescription="hf_no_number"
                            android:text="@string/go_back"
                            android:textColor="@android:color/white"
                            android:textSize="18px"
                            android:textStyle="bold" />
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_zoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8px"
                    android:background="@drawable/bt_zoom_level"
                    android:orientation="horizontal"
                    android:padding="3px">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_zoomLevelText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="7px"
                            android:contentDescription="hf_no_overlay"
                            android:text="@string/zoom"
                            android:textColor="@android:color/white"
                            android:textSize="18px"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_zoom1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3px"
                                android:contentDescription="hf_no_overlay"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/text_yellow"
                                android:textSize="18px"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_zoom2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3px"
                                android:contentDescription="hf_no_overlay"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@android:color/white"
                                android:textSize="18px"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_zoom3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3px"
                                android:contentDescription="hf_no_overlay"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="@android:color/white"
                                android:textSize="18px"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_zoom4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3px"
                                android:contentDescription="hf_no_overlay"
                                android:gravity="center"
                                android:text="4"
                                android:textColor="@android:color/white"
                                android:textSize="18px"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_zoom5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3px"
                                android:contentDescription="hf_no_overlay"
                                android:gravity="center"
                                android:text="5"
                                android:textColor="@android:color/white"
                                android:textSize="18px"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8px"
                    android:background="@drawable/bt_manual_focus"
                    android:contentDescription="hf_no_number"
                    android:gravity="center"
                    android:padding="3px"
                    android:text="@string/manual_focus"
                    android:textColor="@android:color/white"
                    android:textSize="18px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_flash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8px"
                    android:background="@drawable/bt_flash"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="3px">

                    <TextView
                        android:id="@+id/tv_flash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="6px"
                        android:contentDescription="hf_no_number"
                        android:gravity="center"
                        android:text="@string/flash"
                        android:textColor="@android:color/white"
                        android:textSize="18px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_flash_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="hf_no_number"
                        android:gravity="center"
                        android:text="@string/flash_off"
                        android:textColor="@color/text_yellow"
                        android:textSize="18px"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8px"
                    android:background="@drawable/bt_hide_menu"
                    android:contentDescription="hf_no_number"
                    android:gravity="center"
                    android:padding="3px"
                    android:text="@string/show_menu"
                    android:textColor="@android:color/white"
                    android:textSize="18px"
                    android:textStyle="bold" />

            </LinearLayout>
            <!--촬영버튼-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_capture_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="28px"
                    android:layout_marginBottom="28px"
                    android:background="@drawable/bt_capture"
                    android:contentDescription="hf_no_number"
                    android:gravity="center"
                    android:text="@string/capture"
                    android:textColor="@android:color/white"
                    android:textSize="18px"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>

        <!--모드선택-->
        <LinearLayout
            android:contentDescription="hf_no_number"
            android:id="@+id/ll_mode_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginStart="28px"
            android:layout_marginBottom="28px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_photo_select"
                android:gravity="center"
                android:text="@string/photo"
                android:textColor="@color/colorWhite"
                android:textSize="18px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_video"
                android:gravity="center"
                android:text="@string/video"
                android:layout_marginLeft="10px"
                android:textColor="@color/colorWhite"
                android:textSize="18px"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>