<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/sort_popup_box"
    android:contentDescription="hf_no_number"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/go_back"
        android:background="@drawable/bt_edit_go_back"
        android:textColor="@android:color/white"
        android:textSize="17px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="120dp"
        android:textStyle="bold" />


<!--    android:layout_marginTop="138px"
        android:layout_marginLeft="268px"-->
    <TextView
        android:id="@+id/tv_file_title_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="hf_no_number"
        android:text="@string/select_sort_title"
        android:textColor="#2e2e2e"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        android:textSize="28px"
        android:textStyle="bold" />

<!--   android:layout_marginTop="203px"
        android:layout_marginLeft="153px" -->
    <LinearLayout
        android:id="@+id/ll_all_memo_asc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/box_sort_select"
        android:gravity="center|top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ll_all_memo_desc"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginStart="95dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_all_memo_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_sort_select"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17px"
            android:layout_marginTop="21px"
            android:text="@string/select" />

        <TextView
            android:id="@+id/tv_all_memo_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18px"
            android:textColor="#3f3f3f"
            android:textStyle="bold"
            android:layout_marginTop="16px"
            android:text="@string/sort_all_memo" />

        <TextView
            android:id="@+id/tv_all_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14px"
            android:textColor="#3f3f3f"
            android:textStyle="bold"
            android:layout_marginTop="7px"
            android:text="@string/sort_asc" />

    </LinearLayout>

<!--android:layout_marginTop="203px"
        android:layout_marginLeft="290px"-->
    <LinearLayout
        android:id="@+id/ll_all_memo_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/box_sort_select"
        android:gravity="center|top"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toEndOf="@+id/ll_all_memo_asc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ll_my_memo_asc"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_all_memo_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_sort_select"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="21px"
            android:textSize="17px"
            android:text="@string/select" />

        <TextView
            android:id="@+id/tv_all_memo_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18px"
            android:textColor="#3f3f3f"
            android:textStyle="bold"
            android:layout_marginTop="16px"
            android:text="@string/sort_all_memo"/>

        <TextView
            android:id="@+id/tv_all_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14px"
            android:textColor="#3f3f3f"
            android:textStyle="bold"
            android:layout_marginTop="7px"
            android:text="@string/sort_desc" />

    </LinearLayout>

<!--    android:layout_marginTop="203px"
        android:layout_marginLeft="427px"-->
    <LinearLayout
        android:id="@+id/ll_my_memo_asc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/box_sort_select"
        android:gravity="center|top"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toEndOf="@+id/ll_all_memo_desc"
        app:layout_constraintEnd_toStartOf="@+id/ll_my_memo_desc"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_memo_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_sort_select"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17px"
            android:layout_marginTop="21px"
            android:text="@string/select" />

        <TextView
            android:id="@+id/tv_my_memo_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18px"
            android:textColor="#3f3f3f"
            android:textStyle="bold"
            android:layout_marginTop="16px"
            android:text="@string/sort_my_memo" />

        <TextView
            android:id="@+id/tv_my_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14px"
            android:textColor="#3f3f3f"
            android:textStyle="bold"
            android:layout_marginTop="7px"
            android:text="@string/sort_asc" />

    </LinearLayout>

<!--android:layout_marginTop="203px"
        android:layout_marginLeft="564px"-->
    <LinearLayout
        android:id="@+id/ll_my_memo_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/box_sort_select"
        android:gravity="center|top"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="95dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ll_my_memo_asc"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_memo_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_sort_select"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17px"
            android:layout_marginTop="21px"
            android:text="@string/select" />

        <TextView
            android:id="@+id/tv_my_memo_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18px"
            android:textColor="#3f3f3f"
            android:textStyle="bold"
            android:layout_marginTop="16px"
            android:text="@string/sort_my_memo"/>

        <TextView
            android:id="@+id/tv_my_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14px"
            android:textColor="#3f3f3f"
            android:textStyle="bold"
            android:layout_marginTop="7px"
            android:text="@string/sort_desc" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

