<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="410px"
        android:layout_height="258px"
        android:background="@drawable/gallery_popup_box_bg"
        android:orientation="vertical">

        <!--memo area-->


        <ImageView
            android:id="@+id/iv_file_contents"
            android:layout_width="384px"
            android:layout_height="232px"
            android:background="@drawable/thumbnail_loading"
            android:scaleType="fitXY"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:visibility="visible" />


        <!--item title area-->
        <LinearLayout
            android:layout_width="384px"
            android:layout_height="47px"
            android:layout_gravity="center|top"
            android:layout_marginTop="12px"
            android:background="@drawable/gallery_popup_box_title"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_file_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="55px"
                android:contentDescription="hf_no_number"
                android:gravity="center|left"
                android:text="Loading"
                android:textColor="@color/colorWhite"
                android:textSize="16px"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>


        <!--        <FrameLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="45px"-->
        <!--            android:background="@drawable/photo_list_title_bar"-->
        <!--            android:orientation="horizontal"-->
        <!--            android:paddingLeft="40px">-->


        <!--        </FrameLayout>-->


        <ImageView
            android:id="@+id/iv_video_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/icon_play"
            android:visibility="gone" />


    </FrameLayout>
</LinearLayout>